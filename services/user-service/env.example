# User Service Configuration
NODE_ENV=development
USER_SERVICE_PORT=3003
USER_SERVICE_HOST=localhost
SERVICE_VERSION=1.0.0

# Database Configuration
USER_DB_URL=postgresql://user_user:user_password@localhost:5433/user_db
USER_DB_HOST=localhost
USER_DB_PORT=5433
USER_DB_NAME=user_db
USER_DB_USER=user_user
USER_DB_PASSWORD=user_password

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT Configuration
JWT_SECRET=your-jwt-secret-key-here

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Cache TTL Configuration (in seconds)
CACHE_USER_PROFILE_TTL=300
CACHE_FRIEND_LIST_TTL=600
CACHE_PRIVACY_SETTINGS_TTL=1800
CACHE_USER_SEARCH_TTL=60
